<div id="primary-nav" class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<%= link_to root_path, class: "brand" do %>
			<%= image_tag "bg-images/logo.png", alt: "" %>
			<span>Rescue Funder</span>
		<% end %>
		<ul class="nav">
			<li class="divider-vertical"></li>
			<li>
				<%= link_to animals_path do %>
					Browse
					<span>Rescued Animals</span>
				<% end %>
			</li>
			<li class="divider-vertical"></li>
			<li>
				<%= link_to "#" do %>
					Post
					<span>An Animal</span>
				<% end %>
			</li>
			<li class="divider-vertical"></li>
		</ul>
		<ul class="nav pull-right">
			<% if signed_in? %>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
						Account
						<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li>
							<%= link_to "Profile", current_user %>
						</li>
						<li>
							<%= link_to "#" do %>
								<i class="icons-star-full-no-shadow"></i> Favorites
							<% end %>
						</li>
						<li>
							<%= button_to "Sign Out", signout_path, id: "sign_out", method: "delete" %>
						</li>
					</ul>
				</li>
			<% else %>
				<li>
					<%= link_to "Sign Up", signup_path %>
				</li>
				<li>
					<%= link_to "Sign In", signin_path %>
				</li>
			<% end %>
		</ul>
	</div>
</div>