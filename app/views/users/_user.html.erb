<tr>
	<td>
		<div>
			<%= user.full_name %>
		</div>
	</td>
	<td>
		<div><%= user.email %></div>
	</td>
	<td>
		<div>
			<%= link_to user.full_name, user %>
		</div>
	</td>
	<td>
		<div>
			<%= button_to "Delete", user, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this user?" } %>
		</div>
	</td>
</tr>